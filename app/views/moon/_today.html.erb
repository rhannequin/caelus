<div class="rounded-lg border bg-card text-card-foreground shadow-sm cosmic-card">
  <h3 class="text-xl font-bold mb-4 text-primary flex items-center gap-2">
    <%= t ".title" %>
  </h3>
  <div class="space-y-4">
    <div class="moon-time-row">
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">
          <%= t ".moonrise" %>
        </span>
        <div class="text-right">
          <div class="font-semibold">
            <%= nillable_datetime(
              moon.rts.rising_time,
              utc_offset: observer.utc_offset,
              format: :hm
            ) %>
          </div>
          <% if moon.rts.rising_time %>
            <div class="text-xs text-muted-foreground">
              <%= t "shared.azimuth.abbr_title" %>
              <%= format_number(
                rising_azimuth.degrees,
                unit: :degree,
                precision: 0
              ) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="moon-time-row">
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">
          <%= t ".transit" %>
        </span>
        <div class="text-right">
          <div class="font-semibold">
            <%= nillable_datetime(
              moon.rts.transit_time,
              utc_offset: observer.utc_offset,
              format: :hm
            ) %>
          </div>
          <% if moon.rts.transit_time %>
            <div class="text-xs text-muted-foreground">
              <%= t "shared.altitude.abbr_title" %>
              <%= format_number(
                transit_altitude.degrees,
                unit: :degree,
                precision: 0
              ) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="moon-time-row">
      <div class="flex items-center justify-between">
        <span class="text-muted-foreground">
          <%= t ".moonset" %>
        </span>
        <div class="text-right">
          <div class="font-semibold">
            <%= nillable_datetime(
              moon.rts.setting_time,
              utc_offset: observer.utc_offset,
              format: :hm
            ) %>
          </div>
          <% if moon.rts.rising_time %>
            <div class="text-xs text-muted-foreground">
              <%= t "shared.azimuth.abbr_title" %>
              <%= format_number(
                setting_azimuth.degrees,
                unit: :degree,
                precision: 0
              ) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
